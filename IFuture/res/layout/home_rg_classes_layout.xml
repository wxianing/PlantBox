<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="25dp">

    <TextView
        android:id="@+id/plant_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:drawableTop="@drawable/home_shops_icon"
        android:gravity="center"
        android:text="植物商城"
        android:textColor="@color/gray_textcolor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/plant_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:checked="false"
        android:drawableTop="@drawable/home_plant_center_icon"
        android:gravity="center"
        android:text="种植中心"
        android:textColor="@color/gray_textcolor"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/grow_tree"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:drawableTop="@drawable/home_growth_icon"
        android:gravity="center"
        android:text="成长树"
        android:textColor="@color/gray_textcolor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/active_prefecture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:drawableTop="@drawable/home_activity_icon"
        android:gravity="center"
        android:text="活动专区"
        android:textColor="@color/gray_textcolor"
        android:textSize="14sp" />

</LinearLayout>
